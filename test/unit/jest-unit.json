{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../../",
  "testEnvironment": "node",
  "testRegex": "\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverage": true,
  "collectCoverageFrom": [
    "<rootDir>/*/**/*.ts",
    "!<rootDir>/node_modules/**",
    "!<rootDir>/test/**",
    "!<rootDir>/dist/**"
  ],
  "coverageReporters": ["lcov", "text", "text-summary", "html"]
}
